{
  "root": true,
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["fisk-design-system", "import"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "import/no-restricted-paths": [
      "error",
      {
        "basePath": "./src",
        "zones": [
          {
            "target": "components/ui/**/*",
            "from": "components/patterns/**/*",
            "message": "Primitives cannot import from patterns. Use tokens or lib/utils only."
          },
          {
            "target": "components/ui/**/*",
            "from": "components/sections/**/*",
            "message": "Primitives cannot import from sections."
          },
          {
            "target": "components/ui/**/*",
            "from": "components/templates/**/*",
            "message": "Primitives cannot import from templates."
          },
          {
            "target": "components/patterns/**/*",
            "from": "components/sections/**/*",
            "message": "Patterns cannot import from sections."
          },
          {
            "target": "components/patterns/**/*",
            "from": "components/templates/**/*",
            "message": "Patterns cannot import from templates."
          },
          {
            "target": "components/sections/**/*",
            "from": "components/templates/**/*",
            "message": "Sections cannot import from templates."
          },
          {
            "target": "components/**/*",
            "from": "app/**/*",
            "message": "Components cannot import from app routes. Move shared code to lib/ or components/."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "src/app/(app)/**/*",
        "src/app/(admin)/**/*",
        "src/app/(staff)/**/*",
        "src/components/**/*"
      ],
      "rules": {
        "fisk-design-system/no-hardcoded-colors": "error"
      }
    },
    {
      "files": ["src/app/(marketing)/**/*"],
      "rules": {
        "fisk-design-system/no-hardcoded-colors": "warn"
      }
    }
  ]
}
